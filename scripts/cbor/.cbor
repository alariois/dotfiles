#!/bin/sh

GEM_PATH=$(gem env gemdir)
CBOR_DIAG_PATH=$(ls -d $GEM_PATH/gems/cbor-diag-*/bin)

convert() {
    local rb_file="$1"
    local hex_string_in="$2"
    local hex_string_out="$3"

    # Input processing
    local input_cmd
    if [ "$hex_string_in" = true ]; then
        if [ ! -t 0 ]; then
            input_cmd="xxd -r -p"
        elif [ "$#" -gt 3 ]; then
            input_cmd="echo '${@:4}' | xxd -r -p"
        else
            input_cmd="xclip -o | xxd -r -p"
        fi
    else
        if [ ! -t 0 ]; then
            input_cmd="cat"
        elif [ "$#" -gt 3 ]; then
            input_cmd="echo '${@:4}'"
        else
            input_cmd="xclip -o"
        fi
    fi

    # Output processing
    if [ "$hex_string_out" = true ]; then
        eval "$input_cmd" | "$rb_file" | xxd -p
    else
        eval "$input_cmd" | "$rb_file"
    fi
}

